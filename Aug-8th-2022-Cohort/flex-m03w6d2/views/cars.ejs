<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All cars!!!</title>
</head>
<body>
  <div>All the cars</div>
  <% for(const carId in cars) { %>
    <div>
      <p><%= cars[carId].make %> <% cars[carId].model %></p>
      <p>Color: <%= cars[carId].color %></p>
      <p>Year: <%= cars[carId].year %></p>
      <a href="/cars/<%= carId %>">See details</a>
      <form method="POST" action="/cars/<%= carId %>/delete">
        <button type="'submit">Delete this car</button>
      </form>
    </div>
  <% }%>

  <h2>Add a car</h2>
  <form method="post" action="/cars">
    <label>Color</label>
    <input type="text" name="color" />
    <br />

    <label>Make</label>
    <input type="text" name="make" />
    <br />

    <label>Model</label>
    <input type="text" name="model" />
    <br />

    <label>Year</label>
    <input type="text" name="year" />
    <br />

    <button type="submit">Add</button>

  </form>
</body>
</html>